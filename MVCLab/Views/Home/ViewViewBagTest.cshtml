@{
}

<div>
    @{
        var employee = ViewBag.Employee;
    }
    <h2>@ViewBag.Header</h2>
    <table style="font-family:Arial">
        <tr>
            <td> Employee Id:</td>
            <td>@employee.EmployeeID</td>
        </tr>
        <tr>
            <td> Name:</td>
            <td>@employee.Name</td>
        </tr>
        <tr>
            <td> Gender:</td>
            <td>@employee.Gender</td>
        </tr>
        <tr>
            <td> City:</td>
            <td>@employee.City</td>
        </tr>
        <tr>
            <td> Salary:</td>
            <td>@employee.Salary</td>
        </tr>
        <tr>
            <td> Address:</td>
            <td>@employee.Address</td>
        </tr>
    </table>
</div>
